<h2>Games App Login</h2>
<div class="row">
  <div id="form" class="col-sm-12">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name,class:"")) do |f| %>
      <div class="field">
        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true %>
      </div>

      <div class="field">
        <%= f.label :password %><br />
        <%= f.password_field :password, autocomplete: "off" %>
      </div>

      <% if devise_mapping.rememberable? -%>
        <div class="field">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
      <% end -%>

      <div class="actions" style="color:black">
        <%= f.submit "Log in" %>
      </div>
    <% end %>
  </div>
</div>
<div class="col-sm-12" style="color:black; text-decoration: none;text-align: center;">
<%= render "devise/shared/links" %>
</div>